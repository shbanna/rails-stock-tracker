<% if params[:action] == 'search' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>

<% if @users && @users.size > 0 %>
    <div id="friend-lookup-results" class="well results-block col-md-10">
        <table class="search-results-table col-md-12">
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><strong>Name:</strong> <%= user.full_name %></td>
                        <td><strong>Email:</strong> <%= user.email %></td>
                        <td><%= link_to "View Profile", user_path(user), class: "btn btn-xs btn-success" %></td>
                        <td><% if current_user.not_friends_with?(user.id) %>
                        <%= link_to "Add", add_friend_path(user: current_user, friend: user), method: :post, class: "btn btn-xs btn-success" %>
                        <% else %>
                        <span class="label label-primary">
                            Already added
                        </span>
                        <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

<% end %>